<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.github.bordertech.common</groupId>
		<artifactId>qa-parent</artifactId>
		<version>1.0.15</version>
	</parent>

	<name>samples-parent</name>

	<groupId>com.sample</groupId>
	<artifactId>samples-parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<packaging>pom</packaging>

	<description>
		Samples of using WComponents UI Framework.
	</description>

	<url>https://github.com/bordertech/wcomponents-samples</url>

	<scm>
		<url>https://github.com/bordertech/wcomponents-samples</url>
		<connection>scm:git:https://github.com/bordertech/wcomponents-samples.git</connection>
		<developerConnection>scm:git:https://github.com/bordertech/wcomponents-samples.git</developerConnection>
		<tag>wcomponents-samples-1.0.0</tag>
	</scm>

	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/bordertech/wcomponents-samples/issues</url>
	</issueManagement>

	<ciManagement>
		<system>Travis CI</system>
		<url>https://travis-ci.com/BorderTech/wcomponents-samples</url>
	</ciManagement>

	<properties>
		<!-- Disable ALL QA Settings (for the moment) -->
		<bt.qa.skip>false</bt.qa.skip>
		<dependency-check.skip>true</dependency-check.skip>
		<enforcer.fail>false</enforcer.fail>
		<wcomponent.version>1.5.14</wcomponent.version>
	</properties>

	<profiles>
		<profile>
			<id>skipAllTests</id>
			<activation>
				<property>
					<name>skipTests</name>
					<value>true</value>
				</property>
			</activation>
			<properties>
				<skipOptionalTests>true</skipOptionalTests>
			</properties>
		</profile>

		<profile>
			<id>openshift</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<outputDirectory>target</outputDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>
		<pluginManagement>
			<!-- Allows project to be run via mvn lde-exec:run. -->
			<plugins>
				<plugin>
					<groupId>com.github.bordertech.lde</groupId>
					<artifactId>lde-exec-maven-plugin</artifactId>
					<version>1.0.4</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>com.github.bordertech.wcomponents</groupId>
				<artifactId>wcomponents-bundle</artifactId>
				<version>${wcomponent.version}</version>
			</dependency>

			<!-- Tomcat LDE -->
			<dependency>
				<groupId>com.github.bordertech.lde</groupId>
				<artifactId>lde-tomcat</artifactId>
				<version>1.0.4</version>
			</dependency>


			<!-- WComponents Addons -->
			<dependency>
				<groupId>com.github.bordertech.wcomponents</groupId>
				<artifactId>wcomponents-addons-bundle</artifactId>
				<version>1.0.6-beta-1</version>
			</dependency>
			<!-- Didiums -->
			<dependency>
				<groupId>com.github.bordertech.didums</groupId>
				<artifactId>didums-core</artifactId>
				<version>1.0.4</version>
			</dependency>
			<!-- Taskmaster -->
			<dependency>
				<groupId>com.github.bordertech.taskmaster</groupId>
				<artifactId>taskmaster-service-helper</artifactId>
				<version>2.0.0-beta-1</version>
			</dependency>

			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
			</dependency>

			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.12</version>
				<scope>test</scope>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<modules>
		<module>chart-c3-sample</module>
		<module>client-app-sample</module>
		<module>fileupload-sample</module>
	</modules>

</project>